<?xml version="1.0" encoding="UTF-8"?>

<?import de.simbuildings.tilemapper.ui.SettingsForm?>
<?import de.simbuildings.tilemapper.ui.TilePreview?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefWidth="440.0" stylesheets="@light.css"
            fx:controller="de.simbuildings.tilemapper.ui.PrimaryController" xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1" fx:id="root">
    <top>
        <VBox>
            <!-- import -->
            <VBox alignment="CENTER" styleClass="import-section, blue-bg" spacing="16">
                <Button mnemonicParsing="false" text="Import image file" fx:id="importButton"
                        onAction="#handleImportButtonAction">
                    <graphic>
                        <FontIcon iconLiteral="fth-arrow-down" iconSize="24" iconColor="white"/>
                    </graphic>
                </Button>
                <Label text="No file selected" fx:id="importLabel"/>
            </VBox>

            <SettingsForm styleClass="content-section" fx:id="settingsForm"/>
            <TilePreview styleClass="content-section" fx:id="tilePreview" managed="false" visible="false"
                         prefHeight="400"/>
        </VBox>
    </top>

    <bottom>
        <VBox styleClass="content-section" spacing="8">
            <Button mnemonicParsing="false" text="Tile image" fx:id="exportButton"
                    onAction="#handleExportButtonAction"/>
        </VBox>
    </bottom>
</BorderPane>
